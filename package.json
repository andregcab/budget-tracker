{
  "name": "budget-tracker",
  "private": true,
  "scripts": {
    "dev:backend": "npm run start:dev --prefix backend",
    "dev:frontend": "npm run dev --prefix frontend",
    "build:backend": "npm run build --prefix backend",
    "build:frontend": "npm run build --prefix frontend",
    "build": "npm run build:backend && npm run build:frontend",
    "test:backend": "npm run test --prefix backend",
    "test:frontend": "npm run test:run --prefix frontend",
    "test": "npm run test:backend && npm run test:frontend",
    "lint": "npm run lint --prefix backend && npm run lint --prefix frontend",
    "db:generate": "cd backend && npx prisma generate",
    "db:migrate": "cd backend && npx prisma migrate dev",
    "db:studio": "cd backend && npx prisma studio",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "husky": "^9.1.7"
  }
}
